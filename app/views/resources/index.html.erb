<main class="container-resources">
  <header class="header-resources">
    <h1>Resources</h1>
  </header>

  <ul class="resources-list">
    <% @resources.each do |resource| %>
      <li class="resource-element">
        <%= link_to resource_path(resource) do %>
          <article class="resource-card">
            <div class="container-img">
              <%= image_tag resource.image_url, class:"img-preview" %>
            </div>
            <div class="resource-description">
              <div class="resource-title">
                <h2><%= resource.title %></h2>
              </div>
              <div class="resource-details">
                <h3 class="tag"><%= resource.topic %></h3>
                <%= link_to "Read article â†’", resource_path(resource), class:"resources-read" %>
              </div>
            </div>
          </article>
        <% end %>
      </li>
    <% end %>
  </ul>
</main>
