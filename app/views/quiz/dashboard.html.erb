<main class="dashboard-container">
  <h2>Your last assessment shows:</h2>
  <% good_counter = 0 %>
  <% neutral_counter = 0 %>
  <% bad_counter = 0 %>

  <div class="container-results-summary">
    <div data-controller="dashboard" data-dashboard-end-value="<%= @bads.count%>" data-dashboard-title-value="areas need attention" class="dashboard-area">
      <h2><i class="far fa-tired"></i></h2>
      <h2 data-dashboard-target="counter" id="result-counter">0</h2>
      <h3 data-dashboard-target="title" style="visibility: hidden">d </h3>
    </div>

    <div data-controller="dashboard" data-dashboard-end-value="<%= @neutrals.count%>" data-dashboard-title-value="areas could use more help" class="dashboard-area">
      <h2><i class="far fa-grin"></i></h2>
      <h2 data-dashboard-target="counter" id="result-counter">0</h2>
      <h3 data-dashboard-target="title" style="visibility: hidden">d </h3>
    </div>

    <div data-controller="dashboard" data-dashboard-end-value="<%= @goods.count%>" data-dashboard-title-value="areas look great" class="dashboard-area">
      <h2><i class="far fa-grin-beam"></i></h2>
      <h2 data-dashboard-target="counter" id="result-counter">0</h2>
      <h3 data-dashboard-target="title" style="visibility: hidden"> d</h3>
    </div>
  </div>

  <%= link_to(result_path) do %>
    <button class="button button-tertiary">See Detailed Results</button>
  <% end %>
</main>
