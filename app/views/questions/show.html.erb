<div>
  <div class='container-questions'>
    <div class='container-question-content'>
      <h2><%= @question.content %></h2>
    </div>
    <div class='container-answers'>
      <%= link_to "#{@question.option1}", answers_path(question: @question.id, type: "good", content: @question.option1), data: { turbo_method: :post }, class: "btn btn-primary answers" %>
      <%= link_to "#{@question.option2}", answers_path(question: @question.id, type: "neutral", content: @question.option2), data: { turbo_method: :post }, class: "btn btn-primary answers" %>
      <%= link_to "#{@question.option3}", answers_path(question: @question.id, type: "bad", content: @question.option3), data: { turbo_method: :post }, class: "btn btn-primary answers" %>
    </div>

    <div>
      <% unless  @question.id == Question.first.id%>
        <%= link_to "Back", @question.back %>
      <% end %>
    <!--
      <% unless  @question.id == Question.last.id %>
        <%= link_to "Next", @question.next %>
      <% else %>
        <%= link_to "Results", result_path %>
      <% end %>
    -->
    </div>
  </div>
</div>
